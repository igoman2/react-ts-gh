{
    "compilerOptions": {
        // 어느 버전으로 컴파일 할지
        "target": "es5",
        // 어떤 타입이 기본 타입스크립트 타입으로 제공되는지
        "lib": [
            // HTMLInputElement 와 같이 기본 DOM 타입 제공
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // 묵시적 any 사용 불가. 반드시 타입을 명시해야함
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": ["src"]
}
